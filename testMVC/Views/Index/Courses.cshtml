@{
}
<!-- Home -->

<div class="home">
	<div class="home_background_container prlx_parent">
		<img class="home_background prlx" src="~/Design/images/courses_background.jpg"/>
	</div>
	<div class="home_content">
		<h1>Courses</h1>
	</div>
</div>

<!-- Popular -->

<div class="popular page_section">
	<div class="container">
		<div class="row">
			<div class="col">
				<div class="section_title text-center">
					<h1>Available Courses</h1>
				</div>
			</div>
		</div>

		<div class="row course_boxes">

			
			

			<!-- Popular Course Item -->
			@foreach(var item in Model.Courses.ToList())
			{
				
				<div class="col-lg-4 course_box">
					<div class="card">
						<img class="card-img-top" src="~/Design/images/course_2.jpg" alt="https://unsplash.com/@@cikstefan">
						<div class="card-body text-center">
							<div class="card-title"><a href="courses.html">@item.Title</a></div>
							<div class="card-text">@item.Description</div>
						</div>
						<div class="price_box d-flex flex-row align-items-center">
							<div class="course_author_image">
								<img src="~/Design/images/author.jpg" alt="https://unsplash.com/@@mehdizadeh">
							</div>
							<div class="course_author_name">Michael Smith, <span>@item.InstructorName</span></div>
							<div class="course_price d-flex flex-column align-items-center justify-content-center"><span>@item.Price</span></div>
							<div class="course_price d-flex flex-column align-items-center justify-content-center">Price AVG:<span>@Model.Courses.Average(x => x.Price)</span></div>
						</div>
					</div>
				</div>
			}
			


		</div>
	</div>
</div>
